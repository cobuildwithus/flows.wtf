generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins"]
  output          = "../../node_modules/@prisma/farcaster"
}

generator json {
  provider = "prisma-json-types-generator"
}

datasource db {
  provider  = "postgresql"
  url       = env("FARCASTER_DATABASE_URL")
  directUrl = env("DIRECT_FARCASTER_DATABASE_URL")
  schemas   = ["production"]
}

model Profile {
  fname              String?
  display_name       String?
  avatar_url         String?
  bio                String?
  verified_addresses String[]
  updated_at         DateTime
  fid                BigInt          @id
  casts              Cast[]

  // manually verified addresses on flows.wtf (outside of warpcast flow that is too hard for users to find)
  // we merge this with verified_addresses from warpcast on the backend, so just use this field as a source of history
  manual_verified_addresses String[]

  @@index([verified_addresses], type: Gin)
  @@map("farcaster_profile")
  @@schema("production")
}

model Cast {
  hash                     Bytes           @id
  created_at               DateTime
  updated_at               DateTime
  deleted_at               DateTime?
  timestamp                DateTime
  fid                      BigInt
  parent_hash              Bytes?
  parent_fid               BigInt?
  parent_url               String?
  text                     String?
  embeds_array             Json?
  mentioned_fids           BigInt[]
  mentions_positions_array Int[]
  root_parent_hash         Bytes?
  root_parent_url          String?
  profile                  Profile         @relation(fields: [fid], references: [fid])
  computed_tags            String[]
  embed_summaries          String[]
  /// [ImpactVerification[]]
  impact_verifications     Json?
  ai_model_outputs         AiModelOutput[]

  @@map("farcaster_casts")
  @@schema("production")
}

model AiModelOutput {
  id                Int      @id @default(autoincrement())
  created_at        DateTime @default(now())
  model             String
  prompt_tokens     Int?
  completion_tokens Int?
  total_tokens      Int?
  /// [AiModelOutputResult]
  output            Json
  cast_hash         Bytes?
  rule_id           Int?
  cast              Cast?    @relation(fields: [cast_hash], references: [hash])

  @@index([cast_hash])
  @@index([rule_id])
  @@index([created_at])
  @@map("ai_model_outputs")
  @@schema("production")
}